<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diginori.gymdori" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.diginori.gymdori.ActMain"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 스플래시(로딩) 액티비티 -->
        <activity android:name="com.diginori.gymdori.SplashActivity" />
        <activity
            android:name="com.diginori.gymdori.WhuAUActivity"
            android:label="@string/title_activity_whu_au" >
        </activity>
        <activity
            android:name="com.diginori.gymdori.NavigationDrawer"
            android:label="@string/title_activity_navigation_drawer" >
        </activity>
    </application>

</manifest>
